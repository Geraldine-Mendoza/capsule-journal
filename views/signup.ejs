<div class="form">
<div class="h2cell">
<h2>Sign up</h2>
</div>
<div style="height: 20px"></div>
<div class="formcell">
<form method="POST">
	<div class="allinputs">
	<label>Name</label>
	<div class="nameinputs">
		<input type="text" name="user[firstName]" style="text-align: left" required>
		<input type="text" name="user[middleName]">
		<input type="text" name="user[lastName]">
	</div>
	<label>Nickname</label>
	<input type="text" name="user[nickName]">
	<label>Username</label>
	<input type="text" name="user[username]" required>
	<label>Password</label>
	<input type="password" name="user[password]" required>
	</div>
	<div style="height: 20px"></div>
	<div class="submitbutton">
		<input type = "submit">
	</div>
</form>
</div>
</div>
<footer>
</footer>
</body>
